extends layout.pug

block content
  if problem
    h1= problem.title
    p(style="font-weight: bold; color: #555;") Difficulty: #{problem.difficulty}
    hr
    
    div(style="margin-top: 1.5rem;")
      h3 Description
      p= problem.description
    
    div(style="margin-top: 2rem;")
      h3 Your Solution
      //- In a real app, this would be a full code editor component
      textarea(style="width: 100%; height: 250px; font-family: monospace; border: 1px solid #ccc; padding: 1rem; border-radius: 4px; font-size: 14px; line-height: 1.5;")
      button(style="margin-top: 1rem;") Submit Solution
  else
    h1 Problem not found
    p The problem you are looking for does not exist.